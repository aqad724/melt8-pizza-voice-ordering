modules = ["python-3.11", "postgresql-16", "python3"]
[agent]
expertMode = true
integrations = ["python_openai:1.0.0", "twilio_send_message:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "voice-app"

[[workflows.workflow]]
name = "voice-app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43567
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5000"]
